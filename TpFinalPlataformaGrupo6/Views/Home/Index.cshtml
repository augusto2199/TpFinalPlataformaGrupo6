@{
    ViewData["Title"] = "Login";
}

<h1 style="margin-bottom:10px;margin-top:10px;text-align:center;">Login</h1>

<div style="">
    <div style="display:flex;justify-content:center" class="text-center container">
        <form style="width:50%;display:block;justify-content:center;margin-top:50px">
            <div style="margin-bottom:10px" class="form-group">
                <label for="exampleInputMail">Usuario</label>
                <input type="mail" class="form-control" id="exampleInputMail" aria-describedby="mail" placeholder="Usuario">
            </div>
            <div style="margin-bottom:15px" class="form-group">
                <label for="exampleInputPassword1">Contraseña</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Contraseña">
            </div>
            <div style="margin-bottom:10px;">
                <a href="">Registrarse</a>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
